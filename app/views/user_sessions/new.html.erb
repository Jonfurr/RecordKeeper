<div class="col-md-6 text-center">
	<h1>Register</h1>
	<%= render 'users/form' %>
</div>

<div class="col-md-6 text-center">
	<h1>Sign In</h1>
	<p id="notice"><%= notice %></p>

	<%= form_tag user_sessions_path, :method => :post do %>
	  <div class="field">
	    <%= label_tag :email %><br />
	    <%= text_field_tag :email %>
	  </div>
	  <div class="field">
	    <%= label_tag :password %><br />
	    <%= password_field_tag :password %>
	  </div>
	  <div class="actions">
	    <%= submit_tag "Login", class: "btn btn-primary" %>
	  </div>
	<% end %>
	<p><%= link_to 'Forgot your password?', new_reset_password_path %></p>
</div>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>