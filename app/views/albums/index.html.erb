<p id="notice"><%= notice %></p>

<%= form_tag(albums_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Albums" %>
<%= submit_tag "Search" %>
<% end %>



<h1>Listing Albums</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Year</th>
      <th>Title</th>
      <th>Pressing</th>
      <th>Label</th>
      <th>Genre</th>
      <th>Image</th>
      <th>Country</th>
      <th>Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.artist %></td>
        <td><%= album.year %></td>
        <td><%= album.title %></td>
        <td><%= album.pressing %></td>
        <td><%= album.label %></td>
        <td><%= album.genre %></td>
        <td><img class="thumbnail" src="<%= album.image_url %>"></td>
        <td><%= album.country %></td>
        <td><%= album.favorite %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>
